<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:layout_marginTop="40dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Lease.AutoLeaseCalc"
    tools:showIn="@layout/activity_auto_lease_calc">
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/crd"
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:layout_marginBottom="5dp"
        android:padding="20dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="MSRP:"

            android:textColor="@color/black"
            android:textSize="21dp" />

        <EditText
            android:id="@+id/edtMsrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="150dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="@color/black"

            />

        <TextView
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_marginLeft="355dp"
            android:layout_marginTop="8dp"
            android:text="₹"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:text="Interest Rate:"
            android:textColor="@color/black"

            android:textSize="21dp" />

        <EditText
            android:id="@+id/edtInterestRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"

            android:textColor="@color/black" />

        <TextView
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_marginLeft="355dp"
            android:layout_marginTop="60dp"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="112dp"
            android:text="Term of Lease:"
            android:textColor="@color/black"

            android:textSize="21dp" />

        <EditText
            android:id="@+id/edtTermOfLease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="112dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="122dp"
            android:text="Months"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="164dp"
            android:text="Residual Value:"
            android:textColor="@color/black"

            android:textSize="21dp" />

        <EditText
            android:id="@+id/edtResidualValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="164dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_marginLeft="355dp"
            android:layout_marginTop="169dp"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="216dp"
            android:text="Invoice Price:"

            android:textColor="@color/black"

            android:textSize="21dp" />

        <EditText
            android:id="@+id/edtInvoicePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="216dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_marginLeft="355dp"
            android:layout_marginTop="216dp"
            android:text="₹"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ttt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crd"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Select Currency"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/spinn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ttt"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/black" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinn"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/textMonthlyPayment"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="Monthly Payment:   "


            android:textSize="20dp" />

        <TextView
            android:id="@+id/textMonthlyPaymentInCa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"


            android:text="Monthly Payment in CA:   "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textAmtToPrincipal"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:layout_marginTop="112dp"
            android:text="Amount to Principal:   "
            android:textSize="20dp" />


        <TextView
            android:id="@+id/textAmountToInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="164dp"

            android:text="Amount to Interest:   "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textTotalForLease"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
android:layout_marginBottom="10dp"

            android:layout_marginTop="216dp"
            android:text="Total for Lease:   "
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/crd2"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:backgroundTint="@color/purple_500"
            android:onClick="calculateLogic"
            android:text="Calculate"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/purple_500"
            android:onClick="clearLogic"
            android:text="Clear"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/purple_500"
            android:onClick="sendInfo"
            android:text="Send"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/purple_500"

            android:onClick="saveInfo"
            android:text="Save"
            android:textColor="@color/white" />
    </LinearLayout>









</RelativeLayout>
</ScrollView>