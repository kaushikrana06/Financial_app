<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:layout_marginTop="30dp">
<RelativeLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Retirement.RetirementCalc"
    tools:showIn="@layout/activity_retirement_calc">

    <androidx.cardview.widget.CardView
        android:id="@+id/crrrd"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        app:cardCornerRadius="10dp">


        <EditText
            android:id="@+id/edtRequiredIncome"
            android:layout_width="196dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal" />
        <TextView
            android:textColor="@color/black"
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="15dp"
            android:text="₹"
            android:textSize="18dp" />

        <TextView

            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Required Income:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtSocialSecurity"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
        />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:text="Social Security:"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="65dp"
            android:textColor="@color/black"

            android:text="₹"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtPension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="110dp"
            android:ems="10"

            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:textColor="@color/black"

            android:layout_marginLeft="340dp"
            android:layout_marginTop="115dp"
            android:text="₹"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="110dp"

            android:text="Pension:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtPartTimeIncome"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="218dp"
            android:layout_marginTop="160dp"

            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
         />
        <TextView
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="165dp"
            android:textColor="@color/black"

            android:text="₹"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="160dp"

            android:text="Part-Time Income:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtRetirementAge"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="268dp"
            android:layout_marginTop="210dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
       />
        <TextView
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="220dp"
            android:text="Years"
            android:textColor="@color/black"

            android:textSize="15dp" />
        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="210dp"

            android:text="Anticipated Retirement Age:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtMoneyInSavings"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="231dp"
            android:layout_marginTop="260dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
       />
        <TextView
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_marginLeft="340dp"
            android:textColor="@color/black"

            android:layout_marginTop="265dp"
            android:text="₹"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="260dp"
            android:text="₹ in Savings/Retirement:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="310dp"
            android:text="Years Retiring in:"

            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtRetiringIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="310dp"
            android:layout_marginBottom="5dp"
            android:ems="10"

            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
           />
        <TextView
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="325dp"
            android:text="Years"
            android:textSize="15dp" />


    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Select Currency"
android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:id="@+id/ttt"
        android:layout_below="@id/crrrd"/>

    <Spinner
        android:id="@+id/spinn"
        android:backgroundTint="@color/black"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ttt" />
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/spinn"
    android:backgroundTint="@color/white"
    android:elevation="10dp"
    android:id="@+id/crrrd1"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"

        android:layout_marginTop="10dp"
        android:text="Need to Save: "
        android:id="@+id/textNeedToSave"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:textSize="20dp"
        android:text="Needed for Retirement: "
        android:id="@+id/textNeededForRetirement"
        android:textColor="@color/black"

        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:textSize="20dp"
        android:text="Needed Per Year: "
        android:id="@+id/textNeededPerYear"
        android:textColor="@color/black"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        />

</androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/crrrd1"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:id="@+id/button13"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:background="@drawable/round2"
            android:onClick="calculateLogic"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:background="@drawable/round2"
            android:layout_marginLeft="5dp"
            android:id="@+id/button14"
            android:onClick="clearLogic"
           />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/button24"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:background="@drawable/round2"
            android:layout_marginLeft="5dp"
            android:onClick="sendInfo"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:background="@drawable/round2"
            android:layout_marginLeft="5dp"
            android:id="@+id/button26"
            android:onClick="saveInfo"
             />


    </LinearLayout>

</RelativeLayout>
</ScrollView>