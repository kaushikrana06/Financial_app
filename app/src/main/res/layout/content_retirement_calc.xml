<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#151515"
    android:layout_marginTop="56dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Retirement.RetirementCalc"
    tools:showIn="@layout/activity_retirement_calc">

    <androidx.cardview.widget.CardView
        android:id="@+id/crrrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#301B3F"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:padding="10dp">


        <EditText
            android:id="@+id/edtRequiredIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:textColor="#B4A5A5"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="right"
            android:textColorHint="#3C415C"
            android:hint="$"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#B4A5A5"
            android:layout_marginTop="10dp"
            android:text="Required Income:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtSocialSecurity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:textColor="#B4A5A5"
            android:textColorHint="#3C415C"

            android:layout_marginTop="60dp"
            android:ems="10"
            android:gravity="right"
            android:hint="$"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#B4A5A5"

            android:paddingTop="60dp"
            android:text="Social Security:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtPension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:textColor="#B4A5A5"
            android:textColorHint="#3C415C"

            android:layout_marginTop="110dp"
            android:ems="10"
            android:gravity="right"
            android:hint="$"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#B4A5A5"

            android:layout_marginTop="110dp"
            android:text="Pension:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtPartTimeIncome"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="218dp"
            android:layout_marginTop="160dp"
            android:textColorHint="#3C415C"

            android:ems="10"
            android:gravity="right"
            android:hint="$"
            android:inputType="numberDecimal"
            android:textColor="#B4A5A5" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#B4A5A5"

            android:layout_marginTop="160dp"
            android:text="Part-Time Income:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtRetirementAge"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="218dp"
            android:layout_marginTop="210dp"
            android:ems="10"
            android:gravity="right"
            android:textColorHint="#3C415C"

            android:hint="Years"
            android:inputType="numberDecimal"
            android:textColor="#B4A5A5" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#B4A5A5"

            android:layout_marginTop="210dp"
            android:text="Anticipated Retirement Age:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtMoneyInSavings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="260dp"
            android:textColor="#B4A5A5"
            android:textColorHint="#3C415C"

            android:ems="10"
            android:gravity="right"
            android:hint="$"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B4A5A5"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="260dp"
            android:text="$ in Savings/Retirement:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="310dp"
            android:textColor="#B4A5A5"

            android:text="Years Retiring in:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtRetiringIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="310dp"
            android:textColor="#B4A5A5"
            android:textColorHint="#3C415C"

            android:layout_marginBottom="20dp"
            android:ems="10"
            android:gravity="right"
            android:hint="Years"
            android:inputType="numberDecimal" />


    </androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/crrrd"
    android:elevation="10dp"
    android:backgroundTint="#301B3F"
    android:id="@+id/crrrd1"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="#B4A5A5"

        android:layout_marginTop="10dp"
        android:text="Need to Save: $"
        android:id="@+id/textNeedToSave"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:textSize="20dp"
        android:text="Needed for Retirement: $"
        android:id="@+id/textNeededForRetirement"
        android:textColor="#B4A5A5"

        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:textSize="20dp"
        android:text="Needed Per Year: $"
        android:id="@+id/textNeededPerYear"
        android:textColor="#B4A5A5"

        android:layout_marginTop="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        />

</androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crrrd1"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:id="@+id/button13"
            android:background="@drawable/round2"
            android:backgroundTint="@color/purple_500"

            android:onClick="calculateLogic"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:background="@drawable/round2"
            android:backgroundTint="@color/purple_500"
            android:layout_marginLeft="5dp"
            android:id="@+id/button14"
            android:onClick="clearLogic"
           />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/button24"
            android:background="@drawable/round2"
            android:backgroundTint="@color/purple_500"
            android:layout_marginLeft="5dp"
            android:onClick="sendInfo"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/round2"
            android:backgroundTint="@color/purple_500"
            android:layout_marginLeft="5dp"
            android:id="@+id/button26"
            android:onClick="saveInfo"
             />


    </LinearLayout>

</RelativeLayout>
</ScrollView>