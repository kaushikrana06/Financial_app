<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:layout_marginTop="56dp">
<RelativeLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Savings.SavingsRecurringCalc"
    tools:showIn="@layout/activity_savings_recurring_calc">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:backgroundTint="@color/white"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:paddingTop="20dp"
    android:layout_marginTop="20dp"
    android:id="@+id/cddd">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:textSize="20dp"
        android:text="Recurring Deposit:"
        android:id="@+id/textView30"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:textColor="@color/black"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="18dp"
        android:text="₹/Month"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edtDepositAmount"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center"

        android:textColor="@color/colorBlack"

        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"

        android:text="Interest Rate:"
        android:id="@+id/textView31"
        android:layout_marginTop="63dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="41dp"
        android:textColor="@color/colorBlack"

        android:layout_height="36dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="68dp"
        android:text="%"
        android:textSize="18dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textColor="@color/colorBlack"

        android:id="@+id/edtInterestRate"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="150dp"
        android:gravity="center"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Compounding Period:"
        android:id="@+id/textView32"
        android:textColor="@color/colorBlack"

        android:layout_marginTop="113dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/colorBlack"

        android:text="Time/Yr"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edtCompoundPeriod"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="110dp"
        android:ems="10"
        android:textColor="@color/colorBlack"

        android:gravity="center"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"

        android:text="Term:"
        android:id="@+id/textView33"
        android:layout_marginTop="163dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:layout_marginLeft="319dp"
        android:layout_marginTop="170dp"
        android:text="Years"
        android:textSize="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textColor="@color/colorBlack"
        android:id="@+id/edtTerm"
       android:layout_marginTop="160dp"
        android:layout_marginLeft="150dp"
        android:gravity="center"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Initial Deposit: "
        android:id="@+id/textView34"
        android:textColor="@color/colorBlack"

        android:layout_below="@+id/textView33"
       android:layout_marginTop="213dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"

        android:id="@+id/edtInitialDeposit"
      android:layout_marginTop="210dp"
        android:layout_marginLeft="150dp"
        android:textColor="@color/colorBlack"

        android:gravity="center"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="215dp"
        android:textColor="@color/colorBlack"

        android:text="₹"
        android:textSize="18dp" />
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cddd1"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cddd"
        android:backgroundTint="@color/white"
        android:layout_marginTop="30dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/textAccumulatedBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/colorBlack"

            android:layout_marginBottom="40dp"
            android:text="Accumulated Balance: ₹ "
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:backgroundTint="@color/white"
    android:layout_height="60dp"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/cddd1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:background="@drawable/round"
        android:id="@+id/button16"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:onClick="calculateLogic"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:background="@drawable/round"
        android:id="@+id/button17"
        android:onClick="clearLogic"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:id="@+id/button20"
        android:background="@drawable/round"
        android:onClick="sendInfo"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:background="@drawable/round"
        android:id="@+id/button31"
        android:onClick="saveInfo"
       android:layout_marginLeft="5dp" />
</LinearLayout>

</RelativeLayout>
    </ScrollView>
